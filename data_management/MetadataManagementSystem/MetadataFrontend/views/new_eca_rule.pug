extends layout
block headers
    link(rel='stylesheet', href='/stylesheets/loading.css')
    script(src='/js/client_new_eca_rule.js')
    link(href='/js/select2-4.0.3/dist/css/select2.min.css', rel='stylesheet', type='text/css')
    script(src='/js/select2-4.0.3/dist/js/select2.min.js')
    link(rel='stylesheet', href='/stylesheets/select2-bootstrap.min.css')

block content

    .container
        .banner
            .row
                .col-lg-8.col-md-7.col-sm-6
                    h2 New ECA Rule
                    br

            .container-fluid
                .col-lg-8
                    .well.bs-component
                        form#ecaRuleForm(role='form').form-horizontal
                            .form-group#nameForm
                                label.col-lg-2.control-label(for='name') Name
                                .col-lg-10
                                    input#name.form-control(type='text', name='name', required='required')

                            .form-group#bdiOntologyForm
                                label.col-md-2.control-label(for='bdiOntology') Tenant
                                .col-lg-10
                                    select#bdiOntology(style="width:100%")

                            .form-group#simpleClauses
                                label.col-md-2.control-label Simple clauses
                                ul.nav.nav-tabs(role='tablist')#tabPanel
                                    button#addSimpleClause.btn.btn-primary.btn-md(type='submit') +
                                    li(role='presentation')
                                        a#button_tab_1(href='#tab_1' aria-controls="settings" role="tab" data-toggle="tab") SC1

                                .tab-content.fill#tabContent
                                    .tab-pane.fill.active#tab_1(role="tabpanel" style="float:right; width:80%; padding-right:5%")
                                        .form-group
                                            label.col-lg-2.control-label(for='feature') Feature 1
                                            .col-lg-10
                                                select.feature#feature1(style="width:100%")

                                        .form-group
                                            label.col-lg-2.control-label(for='operator') Operator 1
                                            .col-lg-10
                                                select.operator#operator1(style="width:100%")

                                        .form-group
                                            label.col-lg-2.control-label(for='predicate') Predicate 1
                                            .col-lg-10
                                                select.predicate#predicate1(style="width:100%")

                                        .form-group
                                            label.col-lg-2.control-label(for='value') Value 1
                                            .col-lg-10
                                                input.value.form-control#value1(type='text', name='value', required='required')

                                        .form-group
                                            label.col-lg-2.control-label(for='filter') Filter 1
                                            .col-lg-10
                                                input.filter.form-control#filter1(type='text', name='filter', required='required')

                            //.form-group#addSCButton
                                .col-lg-10.col-lg-offset-2
                                    button#addSimpleClause.btn.btn-primary.btn-md(type='submit') Add simple clause

                            .form-group#actionForm
                                label.col-lg-2.control-label(for='feature') Action
                                .col-lg-10
                                    select#action(style="width:100%")

                            .form-group
                                .col-lg-10.col-lg-offset-2
                                    button#submitEcaRule.btn.btn-primary.btn-lg.btn-block(type='submit') Submit

                        //
                            .form-group#windowTimeForm
                                label.col-lg-2.control-label(for='windowTime') Bounded in a Time Window of (min)
                                .col-lg-10
                                    input#windowTime.form-control(type='text', name='windowTime', required='required')

                            .form-group#windowSizeForm
                                label.col-lg-2.control-label(for='windowSize') Number of Elements in Window
                                .col-lg-10
                                    input#windowSize.form-control(type='text', name='windowSize', required='required')
